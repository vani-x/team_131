    + String getApellidoPaterno()
    + void setApellidoPaterno(String)
    + String getApellidoMaterno()
    + void setApellidoMaterno(String)
    + int getEdad()
    + void setEdad(int)
    + String getCi()
    + void setCi(String)
    + char getGenero()
    + void setGenero(char)
}

class Cliente {
    - int cantidadCompras
    - String direccion
    - String correo
    
    + Cliente(String, String, String, int, String, char, int, String, String)
    + String toString()
